RewriteEngine On
RewriteBase /

# Route all requests to index.php
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ /index.php [L,QSA]

Header set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
Header set Access-Control-Allow-Headers "Content-Type, Authorization, X-Requested-With, Accept, Origin, Accept-Encoding, Accept-Language, Accept-Charset, X-CSRF-Token"
Header set Access-Control-Allow-Credentials true
Header set Access-Control-Max-Age 3600
Header set Access-Control-Expose-Headers "Content-Type, Authorization"
Header set Access-Control-Allow-Origin "*"

